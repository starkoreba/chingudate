<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Flats</h1>
    </div>
  </div>
  <div class="row">
    <% @offers.each do |offer| %>
      <div class="col-md-4">
        <div class="card">
          <div class="card-content">
            <div class="card-title">
              <h4><%= offer.title %></h4>
            </div>
            <p><%= offer.location %></p>
          </div>
          <div class="card-actions">
            <%= link_to "More info", offer_path(offer) %>
            <%= link_to "Edit", edit_offer_path(offer), class: "ms-3 text-warning" %>
            <%= link_to "Remove", offer_path(offer),
                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                class: "ms-3 text-danger"
            %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<%= link_to "Create my own date", new_offer_path %>
</div>
